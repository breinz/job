extends ../layout/_layout

block content
    .grid-container
        .grid-x
            .cell
                h1=t("user.signup.page-title")
                -errors = errors || {}
                -data = data || {}

                form(method="POST")
                    label=t("user.login")
                        input(type="text", name="login", autofocus value=data.login)
                        span=errors.login
                    label=t("user.email")
                        input(type="text", name="email" value=data.email)
                        span=errors.email
                    label=t("user.password")
                        input(type="password", name="password")
                        span=errors.password
                    label=t("user.password.repeat")
                        input(type="password", name="password2")
                        span=errors.password2
                    input.button(type="submit", value=t("form.submit"))