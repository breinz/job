extends ../layout/_layout

block content
    h1 Signup
    -errors = errors || {}
    -data = data || {}

    form(method="POST")
        div
            span Login
            input(type="text", name="login", autofocus value=data.login)
            span=errors.login
        div
            span Email
            input(type="text", name="email" value=data.email)
            span=errors.email
        div
            span Password
            input(type="password", name="password")
            span=errors.password
        div
            span Retype password
            input(type="password", name="password2")
            span=errors.password2
        div
            input.button(type="submit", value="Submit")