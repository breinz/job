header.admin
    include _site_title

    .main-menu(data-sticky-container data-sticky data-margin-top="0" data-top-anchor="header-title:bottom" data-sticky-on="small")
        .grid-container
            .cell
                nav.main
                    ul
                        li(class=menu=='user'?'active':'')
                            a(href="/admin/users") Users
                        li(class=menu=='work'?'active':'')
                            a(href="/admin/work")=t("top-menu.work")
                        li(class=menu=='travel'?'active':'')
                            a(href="/admin/travels")=t("top-menu.travels")
                        li(class=menu=='bazaar'?'active':'')
                            a(href="/admin/bazaar") Bazaar
                        li(class=menu=='citation'?'active':'')
                            a(href="/admin/citations") Citations
                        li(class=menu=='images'?'active':'')
                            a(href="/admin/images") Images

    include _user_menu